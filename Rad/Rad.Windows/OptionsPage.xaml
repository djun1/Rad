<SettingsFlyout
    x:Class="Rad.OptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IconSource="Assets/SmallLogo.png"
    Title="Options"
    d:DesignWidth="346" Unloaded="OptionsPage_Unloaded" Loaded="OnLoaded">

    <!-- This StackPanel acts as a root panel for vertical layout of the content sections -->
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="265" >

        <!-- The StackPanel(s) below define individual content sections -->

        <!-- Content Section 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">
            <!-- Section 1 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Station" />
            <!-- Section 1 body -->
            <ComboBox x:Name="StationComboBox" Margin="0,17,0,0" Padding="10,0,27,0" Width="auto" SelectionChanged="StationComboBox_SelectionChanged" SelectedIndex="0">
                <x:String>Billings</x:String>
                <x:String>Boise</x:String>
                <x:String>Elko</x:String>
                <x:String>Eureka</x:String>
                <x:String>Flagstaff</x:String>
                <x:String>Glasgow</x:String>
                <x:String>Great Falls</x:String>
                <x:String>Hanford/San Joaquin Valley</x:String>
                <x:String>Las Vegas</x:String>
                <x:String>Los Angeles/Oxnard</x:String>
                <x:String>Medford</x:String>
                <x:String>Missoula</x:String>
                <x:String>Pendleton</x:String>
                <x:String>Phoenix</x:String>
                <x:String>Pocatello</x:String>
                <x:String>Portland</x:String>
                <x:String>Prince George</x:String>
                <x:String>Reno</x:String>
                <x:String>Sacramento</x:String>
                <x:String>Salt Lake City</x:String>
                <x:String>San Diego</x:String>
                <x:String>San Francisco Bay/Monterey</x:String>
                <x:String>Seattle</x:String>
                <x:String>Spokane</x:String>
                <x:String>Tucson</x:String>
                <x:String>Vancouver</x:String>
            </ComboBox>
        </StackPanel>

        <!-- Define more Content Sections below as necessary -->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">
            <!-- Section 2 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Duration" />
            <!-- Section 2 body -->
            <Grid Margin="0,17,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="DurationRadioButton1" Grid.Column="0" Content="3 hr" IsChecked="True" GroupName="DurationBoxes"/>
                <RadioButton x:Name="DurationRadioButton2" Grid.Column="1" Content="6 hr" GroupName="DurationBoxes"/>
            </Grid>
        </StackPanel>

        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">
            <!-- Section 3 header -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Loop Speed (time per image)" />
            <!-- Section 3 body -->
            <Grid Margin="0,17,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="LoopTimerRadioButton1" Grid.Column="0" Content="0.1 sec" GroupName="LoopTimerBoxes"/>
                <RadioButton x:Name="LoopTimerRadioButton2" Grid.Column="1" Content="0.5 sec" IsChecked="True" GroupName="LoopTimerBoxes"/>
                <RadioButton x:Name="LoopTimerRadioButton3" Grid.Column="2" Content="1 sec" GroupName="LoopTimerBoxes"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</SettingsFlyout>
